package templates

import "github.com/kazhuravlev/database-gateway/internal/config"

templ header(user config.User) {
	@w_appline() {
		<div class="flex items-center justify-start w-full gap-4 text-sm">
			<div class="px-2 py-1">User: { user.Username }</div>
			<div class="px-2 py-1 bg-orange-100 hover:bg-orange-300"><a href="/servers">All servers</a></div>
			<div class="px-2 py-1 bg-orange-100 hover:bg-orange-300"><a href="/logout">Logout</a></div>
		</div>
	}
}
